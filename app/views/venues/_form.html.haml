= form_for @venue do |f|
  -if @venue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@venue.errors.count, "error")} prohibited this venue from being saved:"
      %ul
        - @venue.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :string
    = f.text_field :string
  .field
    = f.label :short_description
    = f.text_area :short_description
  .field
    = f.label :long_description
    = f.text_area :long_description
  .actions
    = f.submit 'Save'
